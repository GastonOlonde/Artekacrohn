<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    android:foreground="?attr/selectableItemBackground">

    <!-- Le background doit être géré uniquement par la CardView (voir adapter), ne pas mettre de background ici -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvModelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom du modèle"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text" />

        <!-- <TextView
            android:id="@+id/tvModelDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description du modèle"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginTop="4dp" /> -->

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
